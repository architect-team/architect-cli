{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "lib",
    "baseUrl": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "composite": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
