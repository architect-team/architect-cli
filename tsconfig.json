{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "composite": true,
    "noEmitHelpers": true,
    "plugins": [
      {
        "transform": "typescript-json/lib/transform"
      }
    ],
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "test", "lib"]
}
