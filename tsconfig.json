{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "resolveJsonModule": true,
    "target": "es2019",
    "composite": true,
    "noEmitHelpers": true,
    "plugins": [
      {
        "transform": "typescript-json/lib/transform"
      }
    ],
    "skipLibCheck": true
  },
  "ts-node": {
    "compiler": "ttypescript"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "lib"
  ]
}
